@model Student;
<h2>Are you sure you want to delete Student Details?</h2>
<form asp-action="DeleteStudent" asp-controller="Student" method="post" >

    <div class="form-group">
        <label asp-for="Email">Email address</label>
        <input type="email" class="form-control" asp-for="Email" readonly>
    </div>

    <div class="row">
        <div class="form-group col">
                <label asp-for="FirstName">First Name</label>
            <input type="text" class="form-control" asp-for="FirstName" readonly>
           </div>
        <div class="form-group col">
                <label asp-for="LastName">Last Name</label>
            <input type="text" class="form-control" asp-for="LastName" readonly>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input class="form-control" asp-for="PhoneNumber" readonly>
    </div>

    <div class="form-group">
        <label asp-for="GPA">GPA</label>
        <input type="number" step="0.001" class="form-control" asp-for="GPA" readonly>
    </div>

    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select class="form-control form-select" asp-items="@Html.GetEnumSelectList(typeof(Course))" asp-for="Course" disabled="true">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="AdmissionDate">Admission Date</label>
        <input type="date" class="form-control" asp-for="AdmissionDate" readonly>
    </div><br />

    <center><button type="submit" class="btn btn-danger">Delete</button></center>
</form>
<br />
<a class="btn btn-dark" type="button" asp-controller="Student" asp-action="Index">Cancel</a>