@model Instructor;
<h1>Update Instructor Details</h1>
<form asp-action="UpdateInstructor" asp-controller="Instructor" method="post">

    <div class="form-group">
        <label asp-for="InstructorId" hidden>ID</label>
        <input type="number" class="form-control" asp-for="InstructorId" hidden>
    </div>

    <div class="row">
        <div class="form-group col">
            <label asp-for="InsFirst">First Name</label>
            <input type="text" class="form-control" asp-for="InsFirst">
        </div>
        <div class="form-group col">
            <label asp-for="InsLast">Last Name</label>
            <input type="text" class="form-control" asp-for="InsLast">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="InstructorRank">Rank</label>
        <select class="form-control form-select" asp-items="@Html.GetEnumSelectList(typeof(Rank))" aria-describedby="CourseHelp" placeholder="Select Instructor Course" asp-for="InstructorRank">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="HiringDate">Hiring Date</label>
        <input type="date" class="form-control" asp-for="HiringDate">
    </div><br />

    <center>
        <input type="checkbox" class="form-check-input form-check-inline" value="true" asp-for="IsTenured">
        <label class="form-check-label" asp-for="IsTenured">Tenured</label>
    </center><br />

    <center><button type="submit" class="btn btn-primary">Save</button></center>
</form>

<a class="btn btn-dark" type="button" asp-controller="Instructor" asp-action="Index">Go Back</a>