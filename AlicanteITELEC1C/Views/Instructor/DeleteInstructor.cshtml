@model Instructor;
<h2>Are you sure you want to delete Instructor Details?</h2>
<form asp-action="DeleteInstructor" asp-controller="Instructor" method="post">

    <div class="row">
        <div class="form-group col">
            <label asp-for="InsFirst">First Name</label>
            <input type="text" class="form-control" asp-for="InsFirst" readonly>
        </div>
        <div class="form-group col">
            <label asp-for="InsLast">Last Name</label>
            <input type="text" class="form-control" asp-for="InsLast" readonly>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input class="form-control" asp-for="PhoneNumber" readonly>
    </div>

    <div class="form-group">
        <label asp-for="InstructorRank">Rank</label>
        <select class="form-control form-select" asp-items="@Html.GetEnumSelectList(typeof(Rank))" aria-describedby="CourseHelp" placeholder="Select Instructor Course" asp-for="InstructorRank" disabled="true">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="HiringDate">Hiring Date</label>
        <input type="date" class="form-control" asp-for="HiringDate" readonly>
    </div><br />

    <center>
        <input type="checkbox" class="form-check-input form-check-inline" value="true" asp-for="IsTenured" onclick="return false;">
        <label class="form-check-label" asp-for="IsTenured">Tenured</label>
    </center><br />

    <center><button type="submit" class="btn btn-danger">Delete</button></center>
</form>

<a class="btn btn-dark" type="button" asp-controller="Instructor" asp-action="Index">Go Back</a>